<header class="w3-container w3-theme w3-padding" id="myHeader">
  <i onclick="w3_open()" class="fa fa-bars w3-xlarge w3-button w3-theme"></i> 
  <div class="w3-center">
  <h4>Build or Edit a Character</h4>
  <h1 class="w3-xxxlarge w3-animate-bottom">Character Sheet</h1>
    <div class="w3-padding-32">
    </div>
  </div>
</header>

<div class="w3-row-padding w3-padding-64 w3-container">
  <div class="w3-content">
    <div class="w3-center">

   
    
    <h1> Character Information: </h1>
    <ul>
<%= form_for @character do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br><br>
    <%= f.label :strength %>
    <%= f.number_field :strength %> <br><br>
    <%= f.label :dexterity %>
    <%= f.number_field :dexterity %> <br><br>
    <%= f.label :constitution %>
    <%= f.number_field :constitution %> <br><br>
    <%= f.label :intelligence %>
    <%= f.number_field :intelligence %> <br><br>
    <%= f.label :wisdom %>
    <%= f.number_field :wisdom %> <br><br>
    <%= f.label :charisma %>
    <%= f.number_field :charisma %> <br><br>
    <%= f.label :armor_rating %>
    <%= f.number_field :armor_rating %> <br><br>
    <%= f.label :max_hp %>
    <%= f.number_field :max_hp %> <br><br>
    <%= f.label :current_hp %>
    <%= f.number_field :current_hp %> <br><br>

    <%= f.label :user_id %>
    <%= f.collection_select :user_id, @user, :id, :username %>
    <%= f.label :campaign_id %>
    <%= f.collection_select :campaign_id, Campaign.all, :id, :title %> <br><br> </ul>
  </div>
</div>
</div>


