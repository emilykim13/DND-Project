<h1>Welcome <%= @user.username %> to DND</h1>

<h3> Create a new Character </h3>
<%= button_to 'Create Character', new_character_path, method: :get %><br><br>
<%= button_to 'Check Out Characters', characters_path, method: :get %><br><br>
<h3> Delete your account </h3>
<%= button_to "Delete Account", @user, method: 'delete' %><br><br>


<h3> Logout </h3>
<%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
  <input type=submit value='Logout'>
<% end %>
